<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rbiffi.vacationfriend">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_vacation_friend"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_vacation_friend"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".VacationList.VacationList">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VacationList.NewVacationActivity"
            android:windowSoftInputMode="adjustPan"
            />
    </application>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>