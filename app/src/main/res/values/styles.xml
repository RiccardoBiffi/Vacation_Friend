<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/light_gray</item>
    </style>

    <style name="EditTextTheme" parent="AppTheme">
        <item name="android:textColor">@color/darker_gray</item>
        <item name="colorControlNormal">@color/darker_gray</item>
    </style>

    <style name="ParticipantShortName">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Fields" >
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/darker_gray</item>
    </style>

    <style name="FieldsMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/darker_gray</item>
    </style>

    <style name="FieldsSmall">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/darker_gray</item>
    </style>

    <style name="Subfields">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/darker_gray</item>
    </style>

    <style name="SubfieldsMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darker_gray</item>
    </style>

    <style name="SubfieldsSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darker_gray</item>
    </style>

    <style name="FieldDescription" >
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/darker_gray</item>
    </style>

    <style name="FieldDescriptionSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/darker_gray</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/light_gray</item>
    </style>

    <style name="UndoButton">
        <item name="android:background">@color/light_gray</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="UndoButtonMedium">
        <item name="android:background">@color/light_gray</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="PrimaryButtonMedium">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Ptutorial">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Pcalltoaction">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="PtutorialMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PcalltoactionMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="VacationCardTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SimpleSpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@drawable/simple_list_divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="SimpleSpinnerTheme" parent="AppTheme">
        <item name="android:dropDownListViewStyle">@style/SimpleSpinnerStyle</item>
    </style>

    <style name="VehicleSpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@drawable/vehicle_list_divider</item>
        <item name="android:dividerHeight">2dp</item>
    </style>

    <style name="VehicleSpinnerTheme" parent="AppTheme">
        <item name="android:dropDownListViewStyle">@style/VehicleSpinnerStyle</item>
    </style>

</resources>
