<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:id="@+id/participant_column_element">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/partecipant_field_picture"
        android:layout_width="56dp"
        android:layout_height="56dp"

        android:src="@drawable/average_man"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="2dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/partecipant_short_name"
        android:layout_width="56dp"
        android:layout_height="wrap_content"

        style="@style/ParticipantShortName"
        android:ellipsize="end"
        android:gravity="center"
        android:text="@string/my_self"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/partecipant_field_picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/partecipant_field_picture" />


</android.support.constraint.ConstraintLayout>