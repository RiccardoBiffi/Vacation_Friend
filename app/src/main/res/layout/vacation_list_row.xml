<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardCornerRadius="8dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <android.support.constraint.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:ignore="RtlSymmetry"
            >

            <ImageView
                android:id="@+id/vacationImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:contentDescription="@string/vlImageDescriptionAcc"
                android:focusable="true"
                android:orientation="horizontal"

                android:scaleType="centerCrop"
                app:srcCompat="@drawable/vacation_photo" />

            <TextView
                android:id="@+id/vacation_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:background="@android:drawable/screen_background_dark_transparent"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="10dp"
                android:text="@string/ph_vacation_name"
                android:textSize="20sp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"

                app:layout_constraintBottom_toBottomOf="@id/vacationImage"
                app:layout_constraintEnd_toStartOf="@id/vacationMenu"
                app:layout_constraintStart_toStartOf="@id/vacationImage" />

            <ImageButton
                android:id="@+id/vacationMenu"
                android:layout_width="wrap_content"
                android:layout_height="0dp"

                android:padding="8dp"

                android:background="@android:drawable/screen_background_dark_transparent"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/vlOpzioniAcc"

                android:src="@drawable/ic_more_vert_white_24dp"
                app:layout_constraintBottom_toBottomOf="@id/vacationImage"
                app:layout_constraintEnd_toEndOf="@id/vacationImage"
                app:layout_constraintStart_toEndOf="@id/vacation_title"
                app:layout_constraintTop_toTopOf="@id/vacation_title" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>