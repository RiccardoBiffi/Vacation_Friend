<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="0dp"
        android:top="0dp"
        android:left="3dp"
        android:gravity="center|left">

        <rotate
            android:fromDegrees="45"
            android:toDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorSecondaryLight" />
                <size
                    android:height="22dp"
                    android:width="22dp" />

            </shape>
        </rotate>

    </item>

    <item
        android:bottom="0dp"
        android:top="0dp"
        android:right="3dp"
        android:gravity="center|right">

        <rotate
            android:fromDegrees="45"
            android:toDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorSecondaryLight" />
                <size
                    android:height="22dp"
                    android:width="22dp" />

            </shape>
        </rotate>

    </item>

    <item
        android:top="0dp"
        android:bottom="0dp"
        android:left="14dp"
        android:right="14dp">

        <shape android:shape="rectangle">
            <solid android:color="@color/colorSecondaryLight" />
            <size android:height="14dp" />
        </shape>

    </item>


</layer-list>